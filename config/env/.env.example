# Portfolio API Environment Configuration
# Copy this file to .env and update with your settings

# Application Settings
APP_DEBUG=true
APP_ENV=development

# Database Configuration
# For local development
DB_HOST=localhost
DB_PORT=3306
DB_NAME=netanel_portfolio
DB_USERNAME=root
DB_PASSWORD=

# For OCI MySQL HeatWave (production)
# DB_HOST=mysql-heatwave.sub12345678.netanelvcn.oraclevcn.com
# DB_PORT=3306
# DB_NAME=netanel_portfolio
# DB_USERNAME=your_mysql_username
# DB_PASSWORD=your_mysql_password

# Cache Settings
CACHE_ENABLED=true

# Logging
LOG_LEVEL=info

# Security (change in production)
SESSION_SECRET=your-secret-key-here

# Email Configuration (for contact form)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM_ADDRESS=noreply@netanelk.com
MAIL_FROM_NAME="Netanel Klein Portfolio"

# API Settings
API_URL=https://api.netanelk.com
FRONTEND_URL=https://netanelk.com
ADMIN_URL=https://admin.netanelk.com

# OCI-Specific Settings (for OKE deployment)
OCI_REGION=iad
OCI_TENANCY_NAMESPACE=your-tenancy-namespace
OCI_COMPARTMENT_ID=ocid1.compartment.oc1..your-compartment-id
OKE_CLUSTER_ID=ocid1.cluster.oc1.iad.your-cluster-id

# Redis Configuration (for OKE with Redis)
REDIS_HOST=redis-service.netanel-portfolio.svc.cluster.local
REDIS_PORT=6379
REDIS_PASSWORD=

# Development Tools (docker-compose profiles)
# Enable with: docker-compose --profile dev-tools up
ENABLE_PHPMYADMIN=true
ENABLE_REDIS_COMMANDER=true
